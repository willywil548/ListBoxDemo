<Window x:Class="ListItem_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListItem_Demo"
        mc:Ignorable="d"
        Title="ListBox Demo" Height="350" Width="525"
        Background="AliceBlue">
    <Grid>
        <ListBox x:Name="listBox1" HorizontalAlignment="Left" Height="146" Margin="24,65,0,0" VerticalAlignment="Top" Width="175" Cursor="Hand" DataContext="{Binding aName}" SelectionMode="Multiple" SelectionChanged="lsb1_Selection"/>
        <ListBox x:Name="listBox2" HorizontalAlignment="Left" Height="146" Margin="284,65,0,0" VerticalAlignment="Top" Width="175" SelectionMode="Multiple"/>
        <Button x:Name="btnTransfer" Content="Transfer -->" HorizontalAlignment="Left" Margin="202,244,0,0" VerticalAlignment="Top" Width="75" Click="btnTransfer_Click" IsEnabled="False"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="202,281,0,0" VerticalAlignment="Top" Width="75" Click="btnReset_Click"/>
        <Button x:Name="btnTransBack" Content="Transfer Back" HorizontalAlignment="Left" Margin="338,244,0,0" VerticalAlignment="Top" Width="75" Click="btnTransBack_Click"/>
    </Grid>
</Window>
